<table id="bootstrap-data-table-moradores" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Tel celular</th>
      <th>Parentesco</th>
      <th>Tipo</th>
      <th>Ativo</th>
      <th>Apartamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% moradors.each do |morador| %>
      <tr>
        <td><%= morador.nome %></td>
        <td><%= morador.cpf %></td>
        <td><%= morador.tel_celular %></td>
        <td><%= morador.parentesco %></td>
        <td><%= morador.tipo ? 'Ativo' : 'Desativo' %></td>
        <td><%= morador.ativo %></td>
        <td><%= morador.apartamento.unidade %></td>
        <td><%= link_to 'Exibir', morador, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Editar', edit_morador_path(morador), class: 'btn btn-sm btn-success' %></td>
        <td><%= link_to 'Excluir', morador, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
            </table>