<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1> Condomínio</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li class="active"><%= link_to 'Condomínio: '+current_condominio.nome, current_condominio %></li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <strong>Condomínio: <%= current_condominio.nome %></strong>
          </div>
          <div class="card-body card-block">
            

<% if notice %>            
<p id="notice">
  <div class="sufee-alert alert with-close alert-success alert-dismissible fade show">
    <span class="badge badge-pill badge-success">Sucesso!</span>
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    </button>
  </div>
</p>
<% end %>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <strong>Nome:</strong>
    </div>
    <div class="col col-md-6">
      <%= @condominio.nome %>
    </div>
  </div>
</div>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <strong>Saldo:</strong>
    </div>
    <div class="col col-md-6">
      <%= @condominio.saldo.round(2) %>
    </div>
  </div>
</div>
<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <strong>Fundo reserva:</strong>
    </div>
    <div class="col col-md-6">
      <%= @condominio.fundo_reserva.round(2) %>
    </div>
  </div>
</div>


</div>
        </div>
        </div>
        </div>
        <div class="form-group">
        <%= link_to 'Editar', edit_condominio_path(@condominio), class: "btn btn-outline-primary", role:"button" %>
        <!--<%= link_to 'Voltar', condominios_path, class: "btn btn-outline-primary", role:"button" %>-->
        </div>
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Apartamentos</strong>
          </div>
          <div class="card-body">
            <%= render 'apartamentos/list', apartamentos: @apartamentos %>
            <%= link_to 'Adicionar Apartamento', new_apartamento_path, class: "btn btn-outline-primary", role:"button" %>
          </div>
        </div>      
      
      </div>
    </div>
  </div><!-- .animated -->
</div><!-- .content -->

