            <table id="bootstrap-data-table-condominio" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Saldo</th>
      <th>Fundo reserva</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% condominios.each do |condominio| %>
      <tr>
        <td><%= condominio.nome %></td>
        <td><%= condominio.saldo %></td>
        <td><%= condominio.fundo_reserva %></td>
        <td><%= link_to 'Exibir', condominio, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Editar', edit_condominio_path(condominio), class: 'btn btn-sm btn-success' %></td>
        <td><%= link_to 'Excluir', condominio, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
