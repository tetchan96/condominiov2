<%= form_tag(despesa_mensal_path, method: :post)  do |f| %>

<table id="bootstrap-data-table-despesas" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Natureza</th>
      <th>Data</th>
      <th>Valor</th>
    </tr>
  </thead>

  <tbody>
    <% despesas.each do |despesa| %>
      <%= fields_for 'despesas[]', despesa do |d| %>
        <tr>
          <td>
            <%= despesa.descricao_tipo.nome %>
            <%= d.hidden_field :descricao_tipo_id, class:"form-control", value: despesa.descricao_tipo.id %>
          </td>
          <td>
            <%= despesa.natureza %>
            <%= d.hidden_field :natureza, class:"form-control", value: despesa.natureza %>
          </td>
          <td>
            <%= despesa.data.strftime("%d/%m/%Y") %>
            <%= d.hidden_field :data, class:"form-control", value: despesa.data %>
          </td>
          <td><%= d.text_field :valor, class:"form-control", value: despesa.valor %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<div class="form-group">
  <div class="col col-md-12">
    <div class="row">
      <%= submit_tag 'Salvar', class: "btn btn-primary btn-sm" %>
      <!--<button type="submit" class="btn btn-primary btn-sm">
        <i class="fa fa-dot-circle-o"></i> Submit
      </button>-->
      <button type="reset" class="btn btn-danger btn-sm">
        <i class="fa fa-ban"></i> Limpar
      </button>
    </div>
  </div>
</div>
<% end %>