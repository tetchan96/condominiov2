<table id="bootstrap-data-table-despesas" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Data</th>
      <th>Valor</th>
      <th>Natureza</th>
       <th>Ativo</th>
      <th>Descricao tipo</th>
      <th ></th>
      <th ></th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% despesas.each do |despesa| %>
      <tr>
        <td><%= despesa.data.strftime("%d/%m/%Y") %></td>
        <td><%= despesa.valor.round(2) %></td>
        <td><%= despesa.natureza %></td>
        <td><%= despesa.ativo ? 'Ativo' : 'Desativo' %></td>
        <td><%= despesa.descricao_tipo.nome %></td>
        <td><%= link_to 'Exibir', despesa, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Editar', edit_despesa_path(despesa), class: 'btn btn-sm btn-success' %></td>
        <td><%= link_to 'Excluir', despesa, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
