<table id="bootstrap-data-table-veiculo" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Cor</th>
      <th>Placa</th>
      <th>Ativo</th>
      <th>Apartamento</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% veiculos.each do |veiculo| %>
      <tr>
        <td><%= veiculo.marca %></td>
        <td><%= veiculo.modelo %></td>
        <td><%= veiculo.cor %></td>
        <td><%= veiculo.placa %></td>
        <td><%= veiculo.ativo ? 'Ativo' : 'Desativo' %></td>
        <td><%= veiculo.apartamento.unidade %></td>
        <td><%= link_to 'Exibir', veiculo, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Editar', edit_veiculo_path(veiculo), class: 'btn btn-sm btn-success' %></td>
        <td><%= link_to 'Excluir', veiculo, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>