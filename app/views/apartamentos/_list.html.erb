<table id="bootstrap-data-table-apartamento" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Unidade</th>
      <th>Ativo</th>
      <th>Condom√≠nio</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% apartamentos.each do |apartamento| %>
      <tr>
        <td><%= apartamento.unidade %></td>
        <td><%= apartamento.ativo ? 'Ativo' : 'Desativo' %></td>
        <td><%= apartamento.condominio.nome %></td>
        <td><%= link_to 'Exibir', apartamento, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Editar', edit_apartamento_path(apartamento), class: 'btn btn-sm btn-success' %></td>
        <td><%= link_to 'Excluir', apartamento, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
