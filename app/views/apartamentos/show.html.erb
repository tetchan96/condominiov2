<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1> Apartamento</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li><%= link_to 'Condomínio', current_condominio %></li>
          <li>Apartamento: <%= @apartamento.unidade %> </li>
        </ol>
      </div>
    </div>
  </div>
</div>
  
<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <strong>Apartamento: <%= @apartamento.unidade %></strong>
          </div>
          <div class="card-body card-block">
<% if notice %>            
<p id="notice">
  <div class="sufee-alert alert with-close alert-success alert-dismissible fade show">
    <span class="badge badge-pill badge-success">Sucesso!</span>
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    </button>
  </div>
</p>
<% end %>  
<p>
  <strong>Unidade:</strong>
  <%= @apartamento.unidade %>
</p>

<p>
  <strong>Ativo:</strong>
  <%= @apartamento.ativo %>
</p>
<!--
<p>
  <strong>Data inclusao:</strong>
  <%= @apartamento.data_inclusao %>
</p>

<p>
  <strong>Data alteracao:</strong>
  <%= @apartamento.data_alteracao %>
</p>
-->
<p>
  <strong>Condomínio:</strong>
  <%= @apartamento.condominio.nome %>
</p>
</div>
</div>
</div>
</div>
        
        <div class="form-group">
          <%= link_to 'Editar', edit_apartamento_path(@apartamento), class: "btn btn-outline-primary", role:"button" %>
          <%= link_to 'Voltar', @apartamento.condominio, class: "btn btn-outline-primary", role:"button" %>
        </div>
        
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Moradores</strong>
          </div>
          <div class="card-body">
            <%= render 'moradors/list', moradors: @moradors %>
            <%= link_to 'Adicionar Morador', new_morador_path, class: "btn btn-outline-primary", role:"button" %>
          </div>
        </div>  
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Veículos</strong>
          </div>
          <div class="card-body">
            <%= render 'veiculos/list', veiculos: @veiculos %>
            <%= link_to 'Adicionar Veículo', new_veiculo_path, class: "btn btn-outline-primary", role:"button" %>
          </div>
        </div> 
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Funcionários</strong>
          </div>
          <div class="card-body">
            <%= render 'funcionarios/list', funcionarios: @funcionarios %>
            <%= link_to 'Adicionar Funcionário', new_funcionario_path, class: "btn btn-outline-primary", role:"button" %>
          </div>
        </div> 
        
        
      </div>
    </div>
  </div><!-- .animated -->
</div><!-- .content -->

