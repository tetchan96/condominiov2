<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1> Editar Descrição Despesa/Receita</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li><%= link_to 'Condomínio', current_condominio %></li>
          <li><%= link_to 'Descrição Despesa/Receita', descricao_tipos_path %></li>
          <li><%= link_to @descricao_tipo.id.to_s, @descricao_tipo %></li>
          <li class="active">Editar</li>
          
        </ol>
      </div>
    </div>
  </div>
</div>
  
<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <strong>Editar</strong>
          </div>
          <div class="card-body card-block">
            <%= render 'form', descricao_tipo: @descricao_tipo %>
          </div>
        </div>
        <%= link_to 'Exibir', @descricao_tipo, class: "btn btn-outline-primary", role:"button" %>
        <%= link_to 'Voltar', descricao_tipos_path, class: "btn btn-outline-primary", role:"button" %>
      </div>
    </div>
  </div><!-- .animated -->
</div><!-- .content -->
