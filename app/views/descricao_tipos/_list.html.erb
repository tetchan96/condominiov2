            <table id="bootstrap-data-table-descricao" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Nome</th>
                  <th>Natureza</th>
                  <th>Valor fixo</th>
                  <th>Ativo</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% descricao_tipos.each do |descricao_tipo| %>
                  <tr>
                    <td><%= descricao_tipo.nome %></td>
                    <td><%= descricao_tipo.natureza %></td>
                    <td><%= descricao_tipo.valor_fixo.round(2) %></td>
                    <td><%= descricao_tipo.ativo ? 'Ativo' : 'Desativo' %></td>
                    <td><%= link_to 'Exibir', descricao_tipo, class: 'btn btn-sm btn-primary' %></td>
                    <td><%= link_to 'Editar', edit_descricao_tipo_path(descricao_tipo), class: 'btn btn-sm btn-success' %></td>
                    <td><%= link_to 'Deletar', descricao_tipo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
