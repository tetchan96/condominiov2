<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1> Funcionário</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          
          <li><%= link_to 'Condomínio', current_condominio %></li>
          <li><%= link_to 'Apartamento: '+ @funcionario.apartamento.unidade, @funcionario.apartamento  %></li>
          <li class="active">Funcionário: <%= @funcionario.nome %></li>
        </ol>
      </div>
    </div>
  </div>
</div>
  
<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <strong>Funcionário: <%= @funcionario.nome %></strong>
          </div>
          <div class="card-body card-block">
<% if notice %>            
<p id="notice">
  <div class="sufee-alert alert with-close alert-success alert-dismissible fade show">
    <span class="badge badge-pill badge-success">Sucesso!</span>
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    </button>
  </div>
</p>
<% end %>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <strong>Nome:</strong>
    </div>
    <div class="col col-md-6">
      <%= @funcionario.nome %>
    </div>
  </div>
</div>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <strong>Telefone:</strong>
    </div>
    <div class="col col-md-6">
      <%= @funcionario.tel %>
    </div>
  </div>
</div>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <strong>Dias Autorizados:</strong>
    </div>
    <div class="col col-md-6">
      <%= @funcionario.dias_autorizados %>
    </div>
  </div>
</div>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <strong>Ativo:</strong>
    </div>
    <div class="col col-md-6">
      <%= @funcionario.ativo %>
    </div>
  </div>
</div>
