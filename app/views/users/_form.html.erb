<%= form_for @user do |f| %>

    <% if @user.errors.any? %>

      <% @user.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger" role="alert">
          <span class="badge badge-pill badge-danger">Erro!</span>
          <%= msg %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
      <% end %>

  <% end %>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-4">
      <%= f.label :name, class: "form-control-label", for: :name %>
    </div>
    <div class="col col-md-8">
      <%= f.text_field :name, class:"form-control", placeholder: :name %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-4">
      <%= f.label :login, class: "form-control-label", for: :login %>
    </div>
    <div class="col col-md-8">
      <%= f.text_field :login, class:"form-control", placeholder: :login %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>

  <div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-4">
      <%= f.label :password, class: "form-control-label", for: :password %>
    </div>
    <div class="col col-md-8">
      <%= f.password_field :password, class:"form-control", placeholder: :password %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-4">
      <%= f.label :password_field, class: "form-control-label", for: :password_field %>
    </div>
    <div class="col col-md-8">
      <%= f.password_field :password_field, class:"form-control", placeholder: :password_field %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col col-md-12">
    <div class="row">
      <%= f.submit 'Salvar', class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>
<% end %>