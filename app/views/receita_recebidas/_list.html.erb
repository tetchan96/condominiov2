<table id="bootstrap-data-table-receitas-recebidas" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Valor</th>
      <th>Data</th>
      <th>Ativo</th>
      <th>Receita a receber</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% receita_recebidas.each do |receita_recebida| %>
      <tr>
        <td><%= receita_recebida.valor.round(2) %></td>
        <td><%= receita_recebida.data.strftime("%d/%m/%Y") %></td>
        <td><%= receita_recebida.ativo %></td>
        <td><%= receita_recebida.receita_a_receber.descricao_tipo.nome %></td>
        <td><%= link_to 'Exibir', receita_recebida, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Editar', edit_receita_recebida_path(receita_recebida), class: 'btn btn-sm btn-success' %></td>
        <td><%= link_to 'Excluir', receita_recebida, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>