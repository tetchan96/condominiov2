<table id="bootstrap-data-table_receita-a-receber" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Valor</th>
      <th>Data</th>
      <th>Natureza</th>
      <th>Ativo</th>
      <th>Apartamento</th>
      <th>Descricao tipo</th>
      <th>Morador</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% receita_a_recebers.each do |receita_a_receber| %>
      <tr>
        <td><%= receita_a_receber.valor.round(2) %></td>
        <td><%= receita_a_receber.data.strftime("%d/%m/%Y") %></td>
        <td><%= receita_a_receber.natureza %></td>
        <td><%= receita_a_receber.ativo ? 'Ativo' : 'Desativo' %></td>
        <td><%= receita_a_receber.apartamento.unidade %></td>
        <td><%= receita_a_receber.descricao_tipo.nome %></td>
        <td><%= receita_a_receber.morador.nome %></td>
        <td><%= link_to 'Exibir', receita_a_receber, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Editar', edit_receita_a_receber_path(receita_a_receber), class: 'btn btn-sm btn-success' %></td>
        <td><%= link_to 'Excluir', receita_a_receber, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
            </table>