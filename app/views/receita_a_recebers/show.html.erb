<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1> Receita a receber</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li><%= link_to 'Condomínio', current_condominio %></li>
          <li><%= link_to 'Receita a receber', receita_a_recebers_path %> </li>
          
          <li class="active"><%= @receita_a_receber.id %></li>
        </ol>
      </div>
    </div>
  </div>
</div>
  
<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <strong>Receita a receber: <%= @receita_a_receber.id %></strong>
          </div>
          <div class="card-body card-block">

<% if notice %>            
<p id="notice">
  <div class="sufee-alert alert with-close alert-success alert-dismissible fade show">
    <span class="badge badge-pill badge-success">Sucesso!</span>
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    </button>
  </div>
</p>
<% end %>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <strong>Valor:</strong>
    </div>
    <div class="col col-md-6">
      <%= @receita_a_receber.valor.round(2) %>
    </div>
  </div>
</div>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <strong>Data:</strong>
    </div>
    <div class="col col-md-6">
      <%= @receita_a_receber.data.strftime("%d/%m/%Y") %>
    </div>
  </div>
</div>
  
  <div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <strong>Natureza:</strong>
    </div>
    <div class="col col-md-6">
      <%= @receita_a_receber.natureza %>
    </div>
  </div>
</div>


<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <strong>Ativo:</strong>
    </div>
    <div class="col col-md-6">
      <%= @receita_a_receber.ativo %>
    </div>
  </div>
</div>
